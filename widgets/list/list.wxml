


<template name="tpl-pagelist">
	<scroll-view class="tpl-pagelist" 
	style="height:{{height}}" 
	scroll-y="{{true}}"
	bindscrolltolower="pageList_goNextPage">
		<block wx:if="{{dataList}}">
			<block wx:for='{{dataList}}' wx:key="id">
				<template is="tpl-listitem-{{item.itemTpl}}" data="{{...item}}"></template>
			</block>
		</block>
		
		<view wx:if="{{isLock}}" class="loading">
			<image src="../../asset/calendar.png"></image>
			<text>正在努力加载中...</text>
		</view>
	</scroll-view>
</template>


<template name="tpl-listitem-xiaoqu">
	<view class="tpl-listitem xiaoqu">
		<view class="listitem-inner">
			<view class="left">
				<!-- <image src="{{logo}}"></image> -->
				<image src="https://yimeiimage.oss-cn-shenzhen.aliyuncs.com/201709/41a23a78-adf8-482f-96e3-6670968a5e16"></image>
			</view>
			<view class="right">
				<view class="info">
					<view class='name'>
						<text class="title">{{name}}</text>
					</view>
					<view class='region'>
						<text>{{address}}</text>
					</view>
					<view class="type">
						<text>房源数:{{houseNum}}</text>
					</view>
				</view>
				<view class="price">
					<text class="num">{{price}}</text>
				</view>
			</view>
		</view>
	</view>
</template>

