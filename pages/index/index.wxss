@import "../../views/home/home.wxss";
@import "../../views/orders/orders.wxss";

page { height : 100%; }

.toolbar { display: flex; height : 100rpx; border-top: solid 1px #eee; position: fixed; bottom : 0; width : 100%; background-color: rgba( 255, 255, 255, 0.9 );z-index:100;}
.toolbar .tab { flex-grow : 1; display: flex; align-items: center; font-size : 24rpx; color : #888; position: relative; justify-content : center; }
.toolbar .tab .icon { width:50rpx; }
.toolbar .tab image { opacity : 0.5; }
.toolbar image.current { opacity: 1; }
.toolbar .tab .num { background-color: #eb2243; color : #fff; width : 36rpx; height : 36rpx; border-radius : 50%; text-align: center; line-height: 36rpx; font-size : 20rpx; position: absolute; left : 50%; margin-left : 10rpx; top : 5rpx; }
.toolbar .line { position: absolute; width : 80rpx; height : 6rpx; background-color: #000; bottom : 0; left : 88rpx;  }

.toolbar .tab image { transition:opacity ease-out 0.2s; }
.toolbar .line { transition:left ease-out 0.2s; }

.tips { position: fixed; top : 0; left : 0; height : 100%; width : 100%; background-color: rgba( 0, 0, 0, 0.5 ); z-index: 1000; display: flex; align-items : center; justify-content : center; }
.tips .pop { padding : 50rpx 40rpx; position: relative; top : -80rpx; background-color: #fff; width : 560rpx; border-radius: 8rpx; position: relative; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.1 ); }
.tips .pop .title { font-size : 36rpx; }
.tips .pop .close { position: absolute; right : -20rpx; top : -20rpx; background-color: #fff; display: flex; align-items : center; justify-content : center; width : 60rpx; height : 60rpx; border-radius: 30rpx; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.1 ); }

/* 评论列表 */
.comment-item { display : flex; margin-top : 80rpx; align-items : center; justify-content : space-between; }
.comment-item .pics { width : 210rpx; position: relative; height : 180rpx; }
.comment-item .pics.img-floor .box{ background-color: #fff; width:160rpx; height:160rpx; box-shadow: 0 6rpx 12rpx 0 rgba(0,0,0,0.05); position: absolute; left : 0; top : 0; border : solid 1rpx #f0f0f0; }
.comment-item .pics.img-floor .box.l-1{ z-index: 3; }
.comment-item .pics.img-floor .box.l-2{ left : 6rpx; top : 6rpx; z-index: 2; }
.comment-item .pics.img-floor .box.l-3{ left : 12rpx; top : 12rpx; z-index: 1; }
.comment-item .info { width : 350rpx; height: 140rpx; display: flex; flex-direction : column; justify-content : space-between; }
.comment-item .info .title,
.comment-item .info .price {  font-size : 28rpx; color : #4a4a4a; }

.act { margin-top : 100rpx; text-align: center; }
.act .btn { font-size : 34rpx; margin : 0 auto; color : #fff; box-shadow: 0 10rpx 20rpx rgba( 0, 0, 0, 0.22 ); background-color: #161823; height : 100rpx; border-radius: 50rpx; padding : 0 70rpx; line-height: 100rpx; text-align: center; display: inline-block; }
