page{
    display:block;
    width:750rpx;
    height:100%;
}
.city-wrap{
    width:750rpx;
    height:100%;
}

.scroll-wrap{
    width:750rpx;
    height:100%;
}
.city-container{
    overflow:hidden;
}
.city-container .city-title{
    height:750rpx;
    height:100rpx;
    font-size:36rpx;
    line-height:100rpx;
    text-align:center;
}
.city-container .city-list .city-item{
    float:left;
    box-sizing:border-box;
    width:25%;
    height:70rpx;
    border:1px solid #f1f1f1;
    font-size:26rpx;
    line-height:70rpx;
    text-align:center;
}
.city-list-wrap{
    overflow:hidden;
}
.city-list-wrap .city-list{
    padding:10rpx 0;
    overflow:hidden;
}
.city-list-wrap .city-list .city-item{
    float:left;
    box-sizing:border-box;
    width:25%;
    height:140rpx;
    border:1px solid #f1f1f1;
    font-size:26rpx;
    line-height:60rpx;
    text-align:center;
}
